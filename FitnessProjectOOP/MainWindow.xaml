<Window x:Class="FitnessProjectOOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessProjectOOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinWidth="428"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Resources here if needed -->
    </Window.Resources>
    <Grid Background="#282D33">
        <!-- Border for the main content area -->
        <Border Background="#282D33"
        BorderBrush="#3A4149"
        BorderThickness="5"
        CornerRadius="8"
        MouseDown="Border_MouseDown"/>


        <!-- Main layout Grid -->
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- TabControl for the main content -->
            <TabControl Grid.Row="1" Background="#282D33" >
                <TabItem Header="Screen 1">
                    <Grid Background="#282D33">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Side: Muscle Group Selection -->
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="Select Muscle Group" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ComboBox x:Name="MuscleGroupcbx" ItemsSource="{Binding MuscleGroups}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedMuscleGroup}" Margin="0,0,0,10"/>
                            <Button x:Name="RecommendExcercisebtn" Content="Recommend Exercises" Command="{Binding RecommendExercisesCommand}" Padding="10" FontSize="14"/>
                        </StackPanel>

                        <!-- Right Side: Workout Templates -->
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Workout Templates" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox x:Name="WorkoutTemplatesListBox" ItemsSource="{Binding WorkoutTemplates}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedWorkoutTemplate}" Height="200" Margin="0,0,0,10"/>
                            <Button Content="Create New Template" Command="{Binding CreateWorkoutTemplateCommand}" Padding="10" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Screen 2">
                    <!-- Content for Screen 2 -->
                </TabItem>

                <TabItem Header="Screen 3">
                    <Grid>
                        <!-- Content for Screen 3 -->
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#282D33" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Home" Padding="10" Margin="5" FontSize="14"/>
                    <Button Content="Exercises" Padding="10" Margin="5" FontSize="14"/>
                    <Button Content="Profile" Padding="10" Margin="5" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>