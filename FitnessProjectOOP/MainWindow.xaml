<Window x:Class="FitnessProjectOOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessProjectOOP"
        mc:Ignorable="d"
        Title="Fitness Tracker" 
        Height="650" 
        Width="900"
        MinWidth="600"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <!-- Main layout Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TabControl for the main content -->
            <TabControl Grid.Row="1" Padding="5">
                <!-- Screen 1 -->
                <TabItem Header="Exercises" Padding="10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Side: Muscle Group Selection -->
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="Select Muscle Group" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ComboBox x:Name="MuscleGroupcbx" 
                                      ItemsSource="{Binding MuscleGroups}" 
                                      DisplayMemberPath="Name" 
                                      SelectedItem="{Binding SelectedMuscleGroup}"
                                      Margin="0,0,0,15"
                                      Padding="5"/>

                            <Button x:Name="RecommendExcercisebtn" 
                                    Content="Recommend Exercises" 
                                    Command="{Binding RecommendExercisesCommand}"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- Right Side: Workout Templates -->
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Workout Templates" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox x:Name="WorkoutTemplatesListBox" 
                                     ItemsSource="{Binding WorkoutTemplates}" 
                                     DisplayMemberPath="Name" 
                                     SelectedItem="{Binding SelectedWorkoutTemplate}" 
                                     Height="200"
                                     Margin="0,0,0,15"/>

                            <Button Content="Create New Template" 
                                    Command="{Binding CreateWorkoutTemplateCommand}"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Screen 2 -->
                <TabItem Header="Templates" Padding="10">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Workout Templates" FontSize="18" FontWeight="Bold" Margin="0,10" HorizontalAlignment="Center"/>

                        <ListBox Grid.Row="1" x:Name="lbxWorkoutTemplate" Margin="20,10">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
                            <Button Content="Create Template" Width="120" Margin="5" Padding="8" Click="Button_Click"/>
                            <Button Content="Edit Template" Width="120" Margin="5" Padding="8"/>
                            <Button Content="Delete Template" Width="120" Margin="5" Padding="8"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Screen 3 -->
                <TabItem Header="Profile" Padding="10">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                            <TextBlock Text="User Profile" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Name:" FontWeight="Bold"/>
                                <TextBox Text="{Binding UserName}" Margin="0,5,0,0" Padding="5"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Fitness Goals:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="FitnessGoalsComboBox" Padding="5">
                                    <ComboBoxItem Content="Lose Weight"/>
                                    <ComboBoxItem Content="Build Muscle"/>
                                    <ComboBoxItem Content="Improve Endurance"/>
                                </ComboBox>
                            </StackPanel>

                            <Button Content="Save Profile" Padding="10,6" Margin="0,20" Width="150"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Screen 4 -->
                <TabItem Header="Exercise Finder" Padding="10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                            <TextBlock Text="Find Exercises" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                            <ComboBox x:Name="cbxRecommendedExcercises" Width="250" Padding="5">
                                <ComboBoxItem Content="Back"/>
                                <ComboBoxItem Content="Chest"/>
                                <ComboBoxItem Content="Shoulders"/>
                                <ComboBoxItem Content="Upper Arms"/>
                                <ComboBoxItem Content="Lower Arms"/>
                                <ComboBoxItem Content="Cardio"/>
                            </ComboBox>

                            <Button x:Name="btnRecommendExercises" 
                    Content="Recommend Exercises" 
                    Margin="0,15,0,0" 
                    Padding="8,5"
                    HorizontalAlignment="Center"
                    Click="BtnRecommendExercises_Click_1"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,20">
                            <TextBlock Text="Recommended Exercises:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ListBox x:Name="lbxRecommendedExercises" Height="200" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="5" Padding="5" Background="#FFF5F5F5" CornerRadius="3">
                                            <StackPanel>
                                                <TextBlock Text="{Binding name}" 
                                  FontWeight="Bold"
                                  TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Equipment: " FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding equipment}" 
                                      FontStyle="Italic"
                                      TextWrapping="Wrap"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Target: " FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding target}" 
                                      Foreground="#FF555555"
                                      TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <!-- Screen 5 -->
                <TabItem Header="Workouts" Padding="10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="My Workout Templates" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            <ListBox x:Name="lbxWorkoutTemplates" Height="250" Padding="5"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
                            <Button Content="Start Workout" Width="120" Margin="5" Padding="8"/>
                            <Button x:Name="btnCreateTemplate" Content="Create Template" Width="120" Margin="5" Padding="8"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Screen 6 -->
                <TabItem Header="History" Padding="10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Workout History" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                        <DataGrid Grid.Row="1" x:Name="WorkoutHistoryGrid" AutoGenerateColumns="False" Padding="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                                <DataGridTextColumn Header="Workout" Binding="{Binding WorkoutName}" Width="*"/>
                                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#EEE" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Home" Padding="10,5" Margin="5" MinWidth="80"/>
                    <Button Content="Templates" Padding="10,5" Margin="5" MinWidth="80"/>
                    <Button Content="Profile" Padding="10,5" Margin="5" MinWidth="80"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>