<Window x:Class="FitnessProjectOOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessProjectOOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        
        <!-- Grid Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>


  

        <!-- Header -->

        <TabControl>
            <!-- Screen 1 -->
            <TabItem Header="Screen 1">

                <!-- Main Content -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side: Muscle Group Selection -->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Select Muscle Group" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ComboBox x:Name="MuscleGroupComboBox" ItemsSource="{Binding MuscleGroups}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedMuscleGroup}" Margin="0,0,0,10"/>
                        <Button Content="Recommend Exercises" Command="{Binding RecommendExercisesCommand}" Padding="10" FontSize="14"/>
                    </StackPanel>

                    <!-- Right Side: Workout Templates -->
                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="Workout Templates" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ListBox x:Name="WorkoutTemplatesListBox" ItemsSource="{Binding WorkoutTemplates}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedWorkoutTemplate}" Height="200" Margin="0,0,0,10"/>
                        <Button Content="Create New Template" Command="{Binding CreateWorkoutTemplateCommand}" Padding="10" FontSize="14"/>
                    </StackPanel>
                    
                    
                </Grid>
                
            </TabItem>

            <!-- Screen 2 -->
            <TabItem Header="Screen 2">
                <Border Grid.Row="2" Background="#FF2D2D30" Padding="10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Home" Padding="10" Margin="5" FontSize="14"/>
                        <Button Content="Exercises" Padding="10" Margin="5" FontSize="14"/>
                        <Button Content="Profile" Padding="10" Margin="5" FontSize="14"/>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Screen 3 -->
            <TabItem Header="Screen 3">

            </TabItem>
        </TabControl>

        <!-- Footer -->

    </Grid>
</Window>