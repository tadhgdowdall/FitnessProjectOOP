<Window x:Class="FitnessProjectOOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessProjectOOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinWidth="428"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded_1">
    <Window.Resources>
        <!-- Resources here if needed -->
    </Window.Resources>
    <Grid Background="#282D33">
        <!-- Border for the main content area -->
        <Border Background="#282D33"
        BorderBrush="#3A4149"
        BorderThickness="5"
        CornerRadius="8"/>

        <!--Test -->

        <!-- Main layout Grid -->
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- TabControl for the main content -->
            <TabControl Grid.Row="1" Background="#282D33" >
                <TabItem Header="Screen 1">
                    <Grid Background="#282D33">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Side: Muscle Group Selection -->
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="Select Muscle Group" Foreground="White"  FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ComboBox x:Name="MuscleGroupcbx" ItemsSource="{Binding MuscleGroups}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedMuscleGroup}" Margin="0,0,0,10"/>
                            <Button x:Name="RecommendExcercisebtn" Content="Recommend Exercises" Command="{Binding RecommendExercisesCommand}" Padding="10" FontSize="14"/>
                        </StackPanel>

                        <!-- Right Side: Workout Templates -->
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Workout Templates" FontSize="18" Foreground="White"  FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox x:Name="WorkoutTemplatesListBox" ItemsSource="{Binding WorkoutTemplates}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedWorkoutTemplate}" Height="200" Margin="0,0,0,10"/>
                            <Button Content="Create New Template" Command="{Binding CreateWorkoutTemplateCommand}" Padding="10" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Screen 2">
                    <!-- Content for Screen 2 -->
                    <Grid Background="#282D33">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Row="0" Text="Workout Templates" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>

                        <!-- List of Workout Templates -->
                        <ListBox Grid.Row="1" x:Name="WorkoutTemplatesList" Margin="20" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="Name awdasdwdasdwdasd" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="Namwdawdawdasdwdasdwd" FontSize="12" Foreground="Black"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                            <Button Content="Create Template" Width="120" Margin="10" Padding="5"/>
                            <Button Content="Edit Template" Width="120" Margin="10" Padding="5"/>
                            <Button Content="Delete Template" Width="120" Margin="10" Padding="5" />
                        </StackPanel>

                        <!-- Details of Selected Template -->
                        <Border Grid.Row="1" Grid.Column="1" Background="LightGray" Margin="10" Padding="10" Visibility="Collapsed" x:Name="TemplateDetailsBorder">
                            <StackPanel>
                                <TextBlock Text="Template Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="TemplateNameText" FontSize="16"/>
                                <TextBlock x:Name="TemplateDescriptionText" FontSize="14" Foreground="Gray"/>
                                <TextBlock Text="Exercises:" FontSize="16" Margin="0,10,0,5"/>
                                <ListBox x:Name="ExercisesList" Height="100">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock  Text="wdasdty"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>
                  
                </TabItem>

                <TabItem Header="Screen 3">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="User Profile" Foreground="white" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                            <!-- User Information -->
                            <TextBlock Text="Name: (User Name)" FontSize="16" Foreground="White"/>
                            <TextBlock Text="Age: (User Age)" FontSize="16" Foreground="White"/>
                            <TextBlock Text="Weight: (User Weight)" FontSize="16" Foreground="White"/>
                            <TextBlock Text="Height: (User Height)" FontSize="16" Foreground="White"/>

                            <!-- Fitness Goals -->
                            <ComboBox x:Name="FitnessGoalsComboBox" Margin="0,20,0,10">
                                <ComboBoxItem Content="Lose Weight"/>
                                <ComboBoxItem Content="Build Muscle"/>
                                <ComboBoxItem Content="Improve Endurance"/>
                            </ComboBox>

                            <!-- Save Button -->
                            <Button Content="Save Profile" Width="200" Margin="0,20"/>
                        </StackPanel>
                    </Grid>
                </TabItem>


                <TabItem Header="Screen 4">
      <Grid>
          <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="2*"/>

          </Grid.RowDefinitions>

          <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0">
              <TextBlock Foreground="white" FontSize="16" Text="Excercises" HorizontalAlignment="Center"/>

              <ComboBox x:Name="DropdownMenu" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200
                        ">
                  <ComboBoxItem Content="Bicep"/>
                  <ComboBoxItem Content="Tricep"/>
                  <ComboBoxItem Content="Legs"/>
                  <ComboBoxItem Content="Chest"/>
              </ComboBox>

              <Button Content="Recommend Excercises" Margin="0,6,0,0" Padding="8"/>

          </StackPanel>

          <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
              <ListBox x:Name="lbxRecommendedExercises"  Height="200" Width="200" Margin="0,0,0,10"/>


          </StackPanel>


      </Grid>
  </TabItem>


                <TabItem Header="Screen 5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                       <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Foreground="White" Text="Workout Templates" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ListBox x:Name="lbxWorkoutTemplates" Height="200" Width="400" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Bottom Section: Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Start Workout" Margin="10,0,10,0" Padding="5" Width="100"/>
            <Button x:Name="btnCreateTemplate" Content="Create Template" Margin="10,0,10,0" Padding="5" Width="100" Click="btnCreateTemplate_Click"/>
        </StackPanel>

                    </Grid>
                </TabItem>


                <TabItem  Header="Screen 5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Row="0" Text="Workout History" Foreground="white" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>

                        <!-- Workout History List -->
                        <DataGrid Grid.Row="1" x:Name="WorkoutHistoryGrid" Margin="20" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                                <DataGridTextColumn Header="Workout" Binding="{Binding WorkoutName}" Width="*"/>
                                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>


            </TabControl>
            
            

            <!-- Footer -->
            <Border Grid.Row="2" Background="#282D33" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Home" Padding="10" Margin="5" FontSize="14"/>
                    <Button Content="Templates" Padding="10" Margin="5" FontSize="14"/>
                    <Button Content="Profile" Padding="10" Margin="5" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>